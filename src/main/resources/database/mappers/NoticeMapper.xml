<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
 <mapper namespace="com.jerry.app.notice.NoticeDAO">
 	<select id="getList" parameterType="ExtraDTO" resultType="NoticeDTO">
 		SELECT * FROM NOTICE_INFO
		<choose>
			<when test="kind == 'k1'">
				WHERE BOARD_TITLE LIKE '%' || #{search} || '%' 
			</when>
			<when test="kind == 'k2'">
				WHERE BOARD_CONTENTS LIKE '%' || #{search} || '%' 
			</when>
			<when test="kind == 'k2'">
				WHERE BOARD_WRITER LIKE '%' || #{search} || '%' 
			</when>
			<otherwise>
			</otherwise>
		</choose>
 	</select>
 
 </mapper>